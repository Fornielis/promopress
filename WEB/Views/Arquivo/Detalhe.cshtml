@model ArquivosViewModel

@{
    ViewData["Title"] = $"PROMO-ID {@Model.Arquivo.ArquivoId.ToString()}";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-6" style="padding: 15px 0 0 10px;">
            <img class="icone-web d-inline" src="~/img/PromoIconeColor.svg" />
            <h5 class="d-inline">PROMO-ID @Model.Arquivo.ArquivoId.ToString()</h5>
        </div>

        <div class="col-6">

            <a class="btn btn-outline-secondary float-end" asp-controller="Arquivo" asp-action="Lista" style="margin-right: 15px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                </svg>
            </a>

            <a class="btn btn-outline-primary float-end" data-bs-toggle="modal" data-bs-target="#staticBackdrop" style="margin-right: 15px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-alarm" viewBox="0 0 16 16">
                    <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9V5.5z" />
                    <path d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1h-3zm1.038 3.018a6.093 6.093 0 0 1 .924 0 6 6 0 1 1-.924 0zM0 3.5c0 .753.333 1.429.86 1.887A8.035 8.035 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5zM13.5 1c-.753 0-1.429.333-1.887.86a8.035 8.035 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1z" />
                </svg>
            </a>
        </div>
    </div>

    <hr />

    <div class="row">

        <section class="col-12 col-sm-4">

            <div class="card p-2">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item fw-bold">@Model.Arquivo.ClienteNome.ToUpper()</li>
                    <li class="list-group-item">@Model.Arquivo.ClienteId.ToUpper()</li>
                    <li class="list-group-item">@Model.Arquivo.Descricao.ToUpper()</li>
                    <li class="list-group-item">@Model.Arquivo.Data.ToString("dd-MM-yyyy")</li>
                </ul>

                @if (!User.IsInRole("com"))
                {
                    <a asp-controller="Arquivo" asp-action="Editar" asp-route-arquivoId="@Model.Arquivo.ArquivoId" class="btn btn-outline-primary mt-2">
                        EDITAR
                    </a>
                }
            </div>

            <div class="card mt-4 mb-4">
                <div class="card-header">

                    @if (!User.IsInRole("com"))
                    {
                        <a asp-controller="Arquivo" asp-action="NovaOp" asp-route-arquivoId="@Model.Arquivo.ArquivoId" class="btn text-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                            </svg>
                        </a>
                    }

                    <b>OPS - Calculos</b>
                </div>
                <div class="row">
                    <div class="text-center">

                        @foreach (var OP in Model.ArquivoOps)
                        {
                            <a asp-controller="Arquivo" asp-action="EditarOp" asp-route-opId="@OP.ArquivoOPId" class="text-dark">
                                <div class="card-linha">
                                    <p class="d-inline-block col-3 mb-2 mt-2">@OP.OP</p>
                                    <p class="d-inline-block col-3 mb-2 mt-2">@OP.Calculo</p>
                                    <p class="d-inline-block col-3 mb-2 mt-2">@OP.Data.ToString("dd-MM-yy")</p>
                                </div>
                            </a>
                        }

                    </div>
                </div>
            </div>

        </section>

        <section class="col-12 col-sm-8">

            <div class="card border border-2 border-primary">
                <div class="card-header">

                    @if (!User.IsInRole("com"))
                    {
                        <a asp-controller="Arquivo" asp-action="NovoItem" asp-route-arquivoId="@Model.Arquivo.ArquivoId" class="btn text-primary">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                                <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                            </svg>
                        </a>
                    }

                    <b>Relação de Itens</b>
                </div>
                <div class="row">
                    <div class="text-center">
                        @foreach (var Item in Model.ArquivoItens)
                        {
                            @if (!Item.Tipo.Contains("CHAPA"))
                            {
                                <div class="list-group m-2">
                                    <a asp-controller="Arquivo" asp-action="EditarIItem" asp-route-arquivoItemId="@Item.ArquivoItemId" class="list-group-item list-group-item-action" aria-current="true">
                                        <div class="d-flex w-100 justify-content-between mb-0">
                                            <h5 class="mb-1 fw-bold text-start">@Item.Tipo.ToUpper()</h5>
                                            <small>@Item.Data.ToString("dd-MM-yy")</small>
                                        </div>

                                        <p class="mb-1 text-start m-0">@Item.Descricao.ToUpper()</p>
                                    </a>
                                </div>
                            }
                            else
                            {
                                if (!User.IsInRole("com"))
                                {
                                    <div class="list-group m-2">
                                        <a asp-controller="Arquivo" asp-action="EditarIItem" asp-route-arquivoItemId="@Item.ArquivoItemId" class="list-group-item list-group-item-action" aria-current="true">
                                            <div class="d-flex w-100 justify-content-between mb-0">
                                                <h5 class="mb-1 fw-bold text-start">@Item.Tipo.ToUpper()</h5>
                                                <small>@Item.Data.ToString("dd-MM-yy")</small>
                                            </div>

                                            <p class="text-start m-0">Posição: <b>@Item.ChapaId</b></p>
                                            <p class="text-start m-0">Quantidade: <b>@Item.QtdChapa</b></p>
                                            <p class="mb-1 text-start m-0">@Item.Descricao.ToUpper()</p>
                                        </a>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<!-- Modal Histórico -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Histórico Atividades <span class="text-primary">PROMO-ID @Model.Arquivo.ArquivoId</span></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="card">

                    <div class="card border-primary">
                        <ul class="list-group list-group-flush">

                            @foreach (var hist in Model.ArquivoHistoricos)
                            {
                                <li class="list-group-item">
                                    <p style="margin: 0">
                                        <b>@hist.Usuario </b>
                                        @hist.Data.ToString("dd-MM-yy")
                                    </p>
                                    <p class="float-md-start" style="margin: 0">@hist.Atividade</p>
                                </li>
                            }

                        </ul>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">FECHAR</button>
            </div>
        </div>
    </div>
</div>




