@model ArquivoItem

@{
    ViewData["Title"] = $"Novo Item PROMO-ID {Model.ArquivoId.ToString()}";
}

<div class="container">

    <div class="row col-md-4 mt-4">
        <div>
            <img class="icone-web d-inline" src="~/img/PromoIconeColor.svg" />
            <h5 class="d-inline">Novo Item PROMO-ID @Model.ArquivoId.ToString()</h5>
            <hr class="mb-3" />
        </div>

        <form asp-controller="Arquivo" asp-action="NovoItem" enctype="multipart/form-data" role="form" method="post">

            <input type="hidden" asp-for="ArquivoId" />
            <input type="hidden" asp-for="Usuario" value="@User.Identity.Name.ToUpper()" />

            <div asp-validation-summary="All" class="text-danger mb-4"></div>

            <div class="card mb-3">
                <div class="card-header">Selecionar Arquivo</div>
                <div class="input-group">
                    <input type="file" class="form-control" id="inputGroupFile02" asp-for="IFormFile">
                </div>
            </div>

            <div class="form-floating mb-3">
                <select class="form-select" id="floatingSelect" asp-for="Tipo" onchange="exibir_ocultar(this)">
                    <option value="" selected>selecione tipo do arquivo</option>

                    @foreach (var tipo in ViewBag.ListaTipos)
                    {
                        <option value="@tipo.Tipo">@tipo.Tipo</option>
                    }

                </select>
                <label>Tipo Arquivo</label>
            </div>

            <div class="form-floating mb-3" id="qtdChapa" style="display: none">
                <input type="text" class="form-control text-uppercase" id="floatingInput" placeholder="name@example.com" asp-for="QtdChapa" value="">
                <label>Quantidade Chapa</label>
            </div>

            <div class="form-floating mb-4">
                <textarea class="form-control text-uppercase" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" asp-for="Descricao"></textarea>
                <label>Descrição</label>
            </div>

            <div class="col-12 mb-4 mt-4">
                <a class="col-5 btn btn-outline-secondary" asp-controller="Arquivo" asp-action="Detalhe" asp-route-arquivoId="@Model.ArquivoId">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                    </svg>
                    VOLTAR
                </a>
                <button class="col-5 float-end btn btn-outline-success" type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save2-fill" viewBox="0 0 16 16">
                        <path d="M8.5 1.5A1.5 1.5 0 0 1 10 0h4a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h6c-.314.418-.5.937-.5 1.5v6h-2a.5.5 0 0 0-.354.854l2.5 2.5a.5.5 0 0 0 .708 0l2.5-2.5A.5.5 0 0 0 10.5 7.5h-2v-6z" />
                    </svg>
                    SALVAR
                </button>
            </div>
            <hr />
        </form>
    </div>
</div>

<script type="text/javascript">

    

    function exibir_ocultar(val) {
        var tipo = $("#floatingSelect option:selected").val();

        if(tipo.includes("CHAPA")) {
            document.getElementById('qtdChapa').style.display = 'block';
        }
        else {
            document.getElementById('qtdChapa').style.display = 'none';
        }};
      

</script>

