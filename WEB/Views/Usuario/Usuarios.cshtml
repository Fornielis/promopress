@model UsuarioViewModel

@{
    ViewData["Title"] = "Usuário";
}

<div class="container">
    <div class="row">
        <section class="col-12 col-sm-4 mt-4">

            <form asp-controller="Usuario" asp-action="Usuarios" role="form" method="post">

                <div class="mb-4">
                    <img class="icone-web d-inline" src="~/img/PromoIconeColor.svg" />
                    <h5 class="d-inline">Novo Usuário</h5>
                    <hr class="mb-3" />
                </div>

                <div asp-validation-summary="All" class="text-danger mb-4"></div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control text-uppercase" id="floatingInput" placeholder="name@example.com" asp-for="Usuario">
                    <label>Usuário</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="email" class="form-control text-uppercase" id="floatingInput" placeholder="name@example.com" asp-for="Email">
                    <label>E-mail</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control text-uppercase" id="floatingInput" placeholder="name@example.com" asp-for="Senha">
                    <label>Senha</label>
                </div>

                <div class="form-floating mb-3">
                    <select class="form-select" id="floatingSelect" asp-for="Role">
                        <option value="" selected></option>
                        <option value="MST">MASTER</option>
                        <option value="ADM">ADMINISTRADOR</option>
                        <option value="USU">USUÁRIO</option>
                        <option value="COM">COMERCIAL</option>
                    </select>
                    <label>Role</label>
                </div>

                <div class="col-12 mb-4">
                    <a class="col-5 btn btn-outline-secondary" asp-controller="Arquivo" asp-action="Lista">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z" />
                        </svg>
                        VOLTAR
                    </a>
                    <button class="col-5 float-end btn btn-outline-success" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-save2-fill" viewBox="0 0 16 16">
                            <path d="M8.5 1.5A1.5 1.5 0 0 1 10 0h4a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h6c-.314.418-.5.937-.5 1.5v6h-2a.5.5 0 0 0-.354.854l2.5 2.5a.5.5 0 0 0 .708 0l2.5-2.5A.5.5 0 0 0 10.5 7.5h-2v-6z" />
                        </svg>
                        SALVAR
                    </button>
                </div>

                <hr />

            </form>
        </section>

        <section class="col-12 col-sm-8 mt-4">

            <div class="card border border-2 border-primary">
                <div class="card-header">
                    <a class="btn text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg>
                    </a>
                    <b>Relação de Usuários</b>
                </div>
                <div class="row">
                    <div class="text-center">
                        @foreach (var Item in Model.listaUsuario)
                        {
                            <div class="list-group m-3">
                                <a class="list-group-item list-group-item-action" aria-current="true">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1 fw-bold text-start">@Item.UserName.ToUpper()</h5>
                                    </div>
                                    <p class="mb-1 text-start">@Item.Email.ToLower()</p>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>